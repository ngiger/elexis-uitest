global [val restart_msFile [ concat $rcpttDir "restart_ms" ] ] -override

/**
 * Somehow this does not always work, wait-until-eclipse-is-ready never returns.
 * We consider it failing unless elexis-run-mode is RunFromScratch or it took less than 5 seconds
 */
proc RestartElexis {
	let [ val milliSecsBeforeRestart [ get-time ] ] {
		concat "RestartElexis: Run-Mode is " [ safe-get-java-property "elexis-run-mode" ] " ms: " $milliSecsBeforeRestart | log
		if [ safe-get-java-property "elexis-run-mode" |  eq "RunFromScratch" ] {
			log "Skipping restart as RunFromScratch" // We cannot restart Elexis without loosing all content
		} -else {
			concat "RestartElexis: Trying to restart Elexis milliSecsBeforeRestart " $milliSecsBeforeRestart | log
			str $milliSecsBeforeRestart  | write-lines $restart_msFile
			if [ safe-get-java-property "ch.elexis.dbFlavor" |  eq "h2" ] {
				log "Do not restart under h2. Would fail with Failed to apply context Close modal dialogs"
			} -else {
				restart-aut
				wait-until-eclipse-is-ready
			}
		}
	}
}

/**
 * Check whether the restart took between 5 and 120 seconds for Elexis
 */
proc CheckRestartElexis {
	// read-file does not work, read-lines neither at they return	 the first line + EOL/EOF
	let [ val milliSecsBeforeRestart [ read-lines $restart_msFile | foreach -do str] ] {
		concat "CheckRestartElexis: milliSecsBeforeRestart were <" $milliSecsBeforeRestart ">" | log
		concat "CheckRestartElexis: milliSecsBeforeRestart now  <" [ get-time ] ">" | log
		if [ safe-get-java-property "elexis-run-mode" |  eq "RunFromScratch" ] {
			log "Skipping CheckRestartElexis as RunFromScratch" // We cannot restart Elexis without loosing all content
			// return
		} -else {
			concat "CheckRestartElexis ms is now: " [ get-time ] " took " [  minus [ get-time ] $milliSecsBeforeRestart ] | log
		}
		minus [ get-time ] $milliSecsBeforeRestart | gt   5000 | log
		minus [ get-time ] $milliSecsBeforeRestart | lt 120000 | log
	    minus [ get-time ] $milliSecsBeforeRestart | gt   5000 | assert-true -message [ concat "CheckRestartElexis  Too fast ms: " [  minus [ get-time ] $milliSecsBeforeRestart ] ]
		minus [ get-time ] $milliSecsBeforeRestart | lt 120000 | assert-true -message [ concat "CheckRestartElexis: Too slow ms: " [  minus [ get-time ] $milliSecsBeforeRestart ] ]
	}
}

