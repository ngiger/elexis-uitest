
<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.elexis.rcptt</groupId>
  <artifactId>KernFunktionen</artifactId>
  <version>0.1</version>
  <packaging>rcpttTest</packaging>
  <parent>
    <groupId>ch.elexis.rcptt</groupId>
    <artifactId>common</artifactId>
    <version>0.1</version>
  </parent>
  <profiles>
    <profile>
      <id>windows</id>
    <activation>
      <os>
        <family>Windows</family>
      </os>
    </activation>
      <properties>
		<dropCreateDbScript>${project.basedir}/drop_create_db.bat</dropCreateDbScript>
      </properties>
	 </profile>
	 <profile>
      <id>other</id>
    <activation>
	<activeByDefault>true</activeByDefault>
    </activation>
      <properties>
		<dropCreateDbScript>${project.basedir}/drop_create_db.sh</dropCreateDbScript>
      </properties>
	 </profile>
   </profiles>
   <properties>
    <!-- these are the default for the h2 database, for
         mysql and postgreSQL we override these values via settings.xml
    -->
    <!-- missing AUTO_SERVER=TRUE" -->
    <vmArg1>-Dch.elexis.dbFlavor=h2</vmArg1>
    <vmArg2>-Dch.elexis.dbSpec=jdbc:h2:${user.home}/elexis/h2_elexis_rcptt_${language}/db</vmArg2>
    <vmArg3>-Dch.elexis.dbUser=sa</vmArg3>
    <vmArg4>-Dch.elexis.dbPw=</vmArg4>
    <vmArg5>-Dch.elexis.firstMandantName=Mustermann</vmArg5>
    <vmArg6>-Dch.elexis.firstMandantPassword=elexisTest</vmArg6>
    <vmArg7>-Dch.elexis.firstMandantEmail=mmustermann@elexis.info</vmArg7>
    <vmArg8>-Dch.elexis.username=Mustermann</vmArg8>
    <vmArg9>-Dch.elexis.password=elexisTest</vmArg9>
    <vmArg10>-Dch.elexis.test.convertDocx2PDF=true</vmArg10>
    <vmArg11>-DvmArg11</vmArg11>
    <suite2run>SmokeTestSuite</suite2run>
  </properties>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
              <id>drop-create-database ${dropCreateDbScript}</id>
              <phase>process-sources</phase>
              <configuration>
                  <target> 
                  <exec executable="${dropCreateDbScript}" failonerror="true" >
                    <arg value="${language}"/>
                    <arg value="${mysqlHost}"/>
                    <arg value="${mysqlPort}"/>
                  </exec>
                </target>
              </configuration>
              <goals>
                <goal>run</goal>
              </goals>
            </execution>
        </executions>
      </plugin>
      <plugin>
          <artifactId>maven-resources-plugin</artifactId>
          <version>3.1.0</version>
          <executions>
              <execution>
                  <id>runtest-copy-elexis-3-log-to-${project.build.directory}/results</id>
                  <phase>verify</phase>
                  <goals>
                      <goal>copy-resources</goal>
                  </goals>
                  <configuration>
                      <outputDirectory>${project.build.directory}/results/</outputDirectory>
                      <resources>
                          <resource>
                              <directory>${user.home}/elexis/logs</directory>
                              <includes>
                                  <include>*</include>
                              </includes>
                          </resource>
                      </resources>
                  </configuration>
              </execution>
              <execution>
                  <id>runtest-PDF-to-${project.build.directory}/results</id>
                  <phase>verify</phase>
                  <goals>
                      <goal>copy-resources</goal>
                  </goals>
                  <configuration>
                      <outputDirectory>${project.build.directory}/results/PDF</outputDirectory>
                      <resources>
                          <resource>
                              <directory>${user.home}/PDF</directory>
                              <includes>
                                  <include>*</include>
                              </includes>
                          </resource>
                      </resources>
                  </configuration>
              </execution>
          </executions>
      </plugin>
      <plugin>
        <groupId>org.eclipse.rcptt</groupId>
        <artifactId>rcptt-maven-plugin</artifactId>
        <version>${rcptt-maven-version}</version>
        <extensions>true</extensions>
        <configuration>
		<runner>
		  <vmArgs>
			  <vmArg>-Xmx1024m</vmArg>
		  </vmArgs>
		</runner>
          <testOptions>
            <!-- the default value of 300 for testExecTimeout was not long enough for VisitAllViews -->
            <!-- full list given http://rcptt.xored.com/arguments, s.a. sets timeout options for the whole test suite and for a single test:-->
            <timeout>7213</timeout>
            <execTimeout>5400</execTimeout><!-- Timeout for all tests, in seconds (90 minutes)-->
            <testExecTimeout>1200</testExecTimeout> <!-- Allow up to 20 minutes for VisitAllViews to finish -->
            <contextRunnableTimeout>5403000</contextRunnableTimeout>
            <passedTestDetails>true</passedTestDetails>
            <memoryUsage>true</memoryUsage>
            <launchingKillAutOnConnectError>true</launchingKillAutOnConnectError>
          </testOptions>
          <aut>
            <!-- use the product build in elexis-${useBranch} -->
            <explicit>${aut}</explicit>
            <args>
              <arg>-nl</arg>
              <arg>${language}_CH</arg>
              <arg>-nosplash</arg>
	      <arg>-noregtool</arg>
              <arg>--use-config=rpctt</arg>
              <arg>-eclipse.password=${user.home}/.eclipse/master</arg>
           </args>
            <vmArgs>
              <vmArg>-noverify</vmArg>
              <vmArg>-Djava.library.path=/usr/lib/jni</vmArg>
              <vmArg>-DGTK_IM_MODULE=ibus</vmArg>
              <vmArg>-Dlanguage=${language}</vmArg>
              <vmArg>-Duser.language=${language}</vmArg>
              <vmArg>${vmArg1}</vmArg>
              <vmArg><![CDATA[${vmArg2}]]></vmArg>
              <vmArg>${vmArg3}</vmArg>
              <vmArg>${vmArg4}</vmArg>
              <vmArg>${vmArg5}</vmArg>
              <vmArg>${vmArg6}</vmArg>
              <vmArg>${vmArg7}</vmArg>
              <vmArg>${vmArg8}</vmArg>
              <vmArg>${vmArg9}</vmArg>
              <vmArg>${vmArg10}</vmArg>
              <vmArg>${vmArg11}</vmArg>
            </vmArgs>
          </aut>
                 <suites>
                       <suite>${suite2run}</suite>
                 </suites>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
